---
import Layout from "../layouts/Layout.astro";
const lang = "pt-br";
---

<Layout title="Daniel Folio" lang={lang}>
  <main>
    <h1>Daniel Rangel Guedes</h1>
    <h2 class="web">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; web</h2>
    <h2 class="edu">educação</h2>
    <h2 class="art">arte</h2>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-flow: column nowrap;
    position: relative;
    box-sizing: border-box;
    padding: 10vh;
    height: 100vh;
    justify-content: center;
    background-image: linear-gradient(
      to bottom right,
      var(--backgroundblack),
      rgba(255, 255, 255, 0.05)
    );
  }
  .edu {
    font-size: 3.52rem;
  }
  .web:before {
    content: "desenvolvimento";
    /* font-family: "Fira Code", monospace; */
    font-size: 1.4rem;
    margin: 0;
    position: absolute;
    transform: translateY(-1.5rem);
    color: white;
  }
  main h1 {
    color: #ce9178;
    font-size: 1.5rem;
    width: 40vh;
  }
  main h2 {
    margin: 0;
    padding: 0;
    font-size: 4rem;
    opacity: 0.8;
    color: white;
    line-height: 4rem;
    transform-origin: left;
    transition: all 300ms;
  }
  main h2:hover {
    -webkit-text-stroke: 0.05rem white;
    opacity: 1;
    cursor: pointer;
  }
</style>

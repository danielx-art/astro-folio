---
import Supercanvas from "./Supercanvas.astro";
export interface Props {
  lang: string;
}
let { lang } = Astro.props;

const text = {
  "pt-br": [
    "Oi! Eu sou o ",
    " e seja bem vinde a minha página! Eu ensino física e matemática, faço uns visuais e crio websites interessantes.",
  ],
  en: [
    "Hi! I'm ",
    " and welcome to my homepage! I teach physics and math, make some visuals and build interesting websites.",
  ],
};

const buttons = {
  "pt-br": ["Vem dar uma olhada>", "Fale comigo>"],
  en: ["Take a look", "Talk to me"],
};
---

<div class="hero-container">
  <div class="inner-container">
    <div class="text">
      {text[lang][0]}<span class="myname">Daniel</span>{text[lang][1]}
      <div class="menu">
        <span class="button know-more">{buttons[lang][0]}</span>
        ou
        <span class="button contact-me">{buttons[lang][1]}</span>
      </div>
    </div>
  </div>
  <div class="gradient"></div>
  <Supercanvas />
</div>


<style>
  .hero-container {
    width: 100%;
    height: 100%;
  }
  .gradient {
    position: absolute;
    height: 100%;
    width: 100%;
    background-image: linear-gradient(
      rgba(255, 255, 255, 0),
      var(--pallete4a) 80%
    );
    user-select: none;
  }
  .inner-container {
    position: absolute;
    display: flex;
    justify-content: end;
    bottom: 0;
    padding: 2vw 3.5vw 3rem 3.5vw;
    z-index: 1;
  }
  @media (max-width: 1024px) {
    .inner-container {
      padding: 2vw 3rem 2rem 3rem;
    }
  }

  .myname {
    color: white;
    user-select: none;
  }

  .text {
    width: 60%;
    /* color: rgba(255, 255, 255, 0.8); */
    color: var(--pallete4c);
    font-family: Fira Code, monospace;
    line-height: 2rem;
    font-size: 1rem;
    text-align: justify;
    text-align-last: right;
    user-select: none;
    text-shadow: 0px 0px 15px var(--pallete4a);
  }

  .menu {
    text-align: center;
  }

  @media (max-width: 1024px) {
    .text {
      width: 100%;
      text-align: center;
      text-align-last: auto;
    }
  }

  .button {
    line-height: 3rem;
    text-transform: uppercase;
    text-shadow: none;
    color: var(--pallete4a);
    cursor: pointer;
    padding: 0.2rem 0.8rem 0.2rem 0.8rem;
    border-radius: 3rem;
  }

  .know-more {
    background-color: var(--pallete4c);
  }

  .contact-me {
    background-color: var(--pallete4b);
  }

  .know-more:hover {
    background: none;
    color: var(--pallete4c);
    outline: 2px dashed var(--pallete4c);
  }

  .contact-me:hover {
    background: none;
    color: var(--pallete4b);
    outline: 2px dashed var(--pallete4b);
  }

